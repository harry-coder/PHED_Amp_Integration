<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgscreen"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgscreen">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textAllCaps="true"
                android:text="@string/billreceipt"
                android:textColor="#000" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card_view1"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/t"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_top"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/con_no"
                            android:textColor="#000" />


                        <TextView
                            android:id="@+id/l"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_top"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/bill_no"
                            android:textColor="#000" />


                    </TableRow>


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/consumer_no"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/con_no" />


                        <TextView
                            android:id="@+id/bill_no"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/bill_no" />


                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/details2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_top"
                            android:ems="10"
                            android:gravity="center"

                            android:text="@string/reading_date"
                            android:textColor="#000" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_top"
                            android:ems="10"
                            android:gravity="center"

                            android:text="@string/pay_by"
                            android:textColor="#000" />


                    </TableRow>


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/bill_date"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/bill_date" />


                        <TextView
                            android:id="@+id/pay_by"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/pay_by" />


                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/details3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="150dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_top"
                            android:ems="10"
                            android:gravity="center"

                            android:text="@string/amount_payable"
                            android:textColor="#000" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_top"
                            android:ems="10"
                            android:gravity="center"

                            android:text="@string/aft_due_date"
                            android:textColor="#000" />


                    </TableRow>


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/amount_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/amount" />


                        <TextView
                            android:id="@+id/amount_due"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/amt_due_date" />


                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/view_name"
                        android:textColor="#FFF"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/ca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/view_address"
                        android:textColor="#FFF"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/ll1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/consumer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/view_Rahul_Jeth"
                        android:textColor="#FFF"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/consumer_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/view_Rahul_Jeth"
                        android:textColor="#FFF"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="330dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/cell_shape_top"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/tariff_category"
                        android:textColor="#000" />


                    <TextView
                        android:id="@+id/load_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/cell_shape_top"
                        android:ems="10"
                        android:text="@string/load"
                        android:gravity="center"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/p"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/cell_shape_top"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/phase"
                        android:textColor="#000" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/tariff"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/cell_shape_bottom"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/tariff_category" />


                    <TextView
                        android:id="@+id/load"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/cell_shape_bottom"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/load" />

                    <TextView
                        android:id="@+id/phase"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/cell_shape_bottom"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/phase" />
                </TableRow>

            </TableLayout>


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"

                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/heading2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:background="@drawable/cell_shape_top">

                    <TextView
                        android:id="@+id/ar"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/arrears"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/BB"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/der_mtr_sts"
                        android:textColor="#000" />


                    <TextView
                        android:id="@+id/unit"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/consumed_units"
                        android:textColor="#000" />


                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_shape_bottom">

                    <TextView
                        android:id="@+id/arrear"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/arrear" />

                    <TextView
                        android:id="@+id/bill_basis"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/der_mtr_sta" />

                    <TextView
                        android:id="@+id/consumed_units"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/Units" />


                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="480dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/arrear"
                            android:textColor="#000"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/arre"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/arrear"
                            android:visibility="gone" />


                    </TableRow>


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/cur_bill"
                            android:textColor="#000"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/curr"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/current"
                            android:visibility="gone" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/total_amount"
                            android:textColor="#000"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/total"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/total"
                            android:visibility="gone" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/amt_due_date"
                            android:textColor="#000"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/due"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/cell_shape_bottom"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/amt_due"
                            android:textColor="#e53935"
                            android:visibility="gone" />

                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="630dp">

                <!--<Button
                    android:id="@+id/print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/button_login"
                    android:text="PRINT"
                    android:textColor="@drawable/button_login_textcolor"
                    android:textStyle="bold" />-->

            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"

                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/heading3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:background="@drawable/cell_shape_top">

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/bill_month"
                        android:textColor="#000" />


                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_shape_bottom">

                    <TextView
                        android:id="@+id/billmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/bill_month" />


                </TableRow>

            </TableLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_view1"
            android:layout_alignEnd="@+id/card_view2"
            android:layout_alignTop="@+id/card_view1"
            android:layout_margin="5dp"
            android:background="@drawable/button_login"
            android:text="@string/view_next"
            android:textColor="@drawable/button_login_textcolor"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>