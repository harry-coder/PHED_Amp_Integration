                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:background="@drawable/cell_shape_bottomcollection"
                                android:ems="10"
                                android:gravity="center"
                                android:text="@string/Amt"
                                android:textColor="#fff" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/cell_shape_bottomcollection"
                                android:ems="10"
                                android:gravity="center"

                                android:text="@string/Con_type"
                                android:textColor="#fff" />


                        </TableRow>


                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/amount_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:background="@drawable/cell_shape_bottom"
                                android:ems="10"
                                android:gravity="center"
                                android:text="@string/amount"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/amount_due"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/cell_shape_bottom"
                                android:ems="10"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="@string/pre_amt_re_dt" />


                        </TableRow>
                    </TableLayout>
                </LinearLayout>

