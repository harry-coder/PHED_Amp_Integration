                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/add"
                            android:textColor="#FFF"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/ll1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/factortype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/factor_type"
                            android:textColor="#FFF"
                            android:textSize="14dp" />
                        <TextView
                            android:id="@+id/factoramt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/factor_tamt"
                            android:textColor="#FFF"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/consumer_name"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/view_Rahul_Jeth"
                            android:textColor="#FFF"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/consumer_div"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/BCS"
                            android:textColor="#FFF"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/consumer_sdiv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/sub_div"
                            android:textColor="#FFF"
                            android:textSize="14dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/consumer_sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/IBC"
                            android:textColor="#FFF"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/consumer_ivrs_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/ivrs"
                            android:textColor="#FFF"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/consumer_addr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="7dp"
                            android:text="@string/add"
                            android:textColor="#FFF"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parentview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="430dp"

                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_amountContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </androidx.recyclerview.widget.RecyclerView>

