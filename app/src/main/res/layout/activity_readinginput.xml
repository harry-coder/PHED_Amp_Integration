<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fedco.mbc.activity.Readinginput">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextViewRIName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/nm"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:id="@+id/TextViewRINameValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextViewRIPs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/pr_mtr_status"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:id="@+id/TextViewRIPsValues"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextViewRICr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/curr_reading"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <EditText
                    android:id="@+id/TextViewRICrValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextViewRIMd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/max_demand"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <EditText
                    android:id="@+id/tv_md_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/mtr_no"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:id="@+id/tv_meter_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextViewRIMdUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/max_demand_un"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <Spinner
                    android:id="@+id/TextViewRIMdUnitValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:entries="@array/units"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextViewRIPf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/pr_factor"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />

                <EditText
                    android:id="@+id/TextViewRIPfValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_primary"
                android:orientation="horizontal"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/spinnerMeterMfg"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:entries="@array/meter_mfg"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#cccccc" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/login_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/color_primary"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/TextViewRIPfUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left|center"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:text="@string/pr_factor_un"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <Spinner
                        android:id="@+id/TextViewRIPfUnitValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:entries="@array/units"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/color_primary"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/TextViewRIRem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left|center"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:text="@string/remark"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />

                    <Spinner
                        android:id="@+id/TextViewRRemValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:entries="@array/units"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cccccc" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:text="@string/md_value"
                        android:visibility="gone" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/tv_reasons"
                style="@style/textview_gen"
                android:text="@string/slt_reason"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout style="@style/linear_fieldset">


                <Spinner
                    android:id="@+id/spr_reasons"
                    style="@style/edittext_gen_stl"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/color_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ButtonTakereading"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="7dp"
                    android:background="@drawable/button_login"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/pr_reading"
                    android:textColor="@drawable/button_login_textcolor"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_send_log_to_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="7dp"
                    android:background="@drawable/button_login"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/snd_to_server"
                    android:textColor="@drawable/button_login_textcolor"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/ButtonContreading"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="7dp"
                    android:background="@drawable/button_login"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/cam_continue"
                    android:textColor="@drawable/button_login_textcolor"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
